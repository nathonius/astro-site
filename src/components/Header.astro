---
import { SunMoon, Search } from "lucide-astro";

interface Props {
  active?: "home" | "posts" | "projects" | "contact" | "search";
}

const { active } = Astro.props;
---

<header>
  <nav
    class="navbar bg-base-100 gap-1 md:gap-2"
    aria-label="Primary navigation"
  >
    <a
      class:list={[
        "btn",
        { "btn-ghost": active !== "home", "btn-soft": active === "home" },
      ]}
      href="/"
    >
      Home
    </a>
    <a
      class:list={[
        "btn",
        { "btn-ghost": active !== "posts", "btn-soft": active === "posts" },
      ]}
      href="/posts/"
    >
      Posts
    </a>
    <a
      class:list={[
        "btn",
        {
          "btn-ghost": active !== "projects",
          "btn-soft": active === "projects",
        },
      ]}
      href="/projects/"
    >
      Projects
    </a>
    <a
      class:list={[
        "btn hidden md:flex",
        { "btn-ghost": active !== "contact", "btn-soft": active === "contact" },
      ]}
      href="/contact/"
    >
      Contact
    </a>
    <a
      class:list={[
        "btn hidden md:flex",
        { "btn-ghost": active !== "search", "btn-soft": active === "search" },
      ]}
      href="/search/"
    >
      Search
    </a>
    <div class="flex gap-2">
      <a
        id="search-icon"
        href="/search/"
        class:list={[
          "btn md:hidden",
          { "btn-ghost": active !== "search", "btn-soft": active === "search" },
        ]}
      >
        <span class="sr-only">Search</span>
        <Search />
      </a>
      <div class="tooltip tooltip-bottom" data-tip="Toggle theme">
        <button
          id="header--theme-toggle"
          type="button"
          class="btn btn-ghost hidden md:flex"
          aria-label="Toggle theme"
        >
          <SunMoon />
        </button>
        <script>
          const themeToggle = document.querySelector("#header--theme-toggle");
          themeToggle?.addEventListener("click", () => {
            (window as any).theme.toggle();
          });
        </script>
      </div>
    </div>
  </nav>
</header>
