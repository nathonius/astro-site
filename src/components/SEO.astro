---
export interface SEOProps {
  title?: string;
  image?: string;
  description?: string;
  article?: {
    published_time?: string;
    modified_time?: string;
    tags?: string[];
  };
}
type Props = SEOProps;
const { title, article, description, image } = Astro.props;
const tags = article?.tags;
---

<meta property="og:url" content={Astro.url.href} />
<meta property="og:author" content="Nathan Smith" />
{title && <meta property="og:title" content={title} />}
{description && <meta property="og:description" content={description} />}
{image && <meta property="og:image" content={image} />}
{article && <meta property="og:type" content="article" />}
{
  article?.modified_time && (
    <meta property="article:modified_time" content={article.modified_time} />
  )
}
{
  article?.published_time && (
    <meta property="article:published_time" content={article.published_time} />
  )
}
{tags && tags.map((t) => <meta property="article:tag" content={t} />)}
